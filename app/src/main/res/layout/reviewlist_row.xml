<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/padding10"
    android:layout_marginBottom="@dimen/padding10"
    android:layout_marginLeft="@dimen/padding5"
    android:layout_marginRight="@dimen/padding5">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgreyy"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_marginTop="@dimen/padding20"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.3">
        <LinearLayout
            android:gravity="center|top"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dr"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/padding5"
        android:layout_weight="0.7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="@dimen/padding5">
            <TextView
                android:id="@+id/tv_review_name"
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:gravity="center|start"
                android:includeFontPadding="false"
                android:text="Samul smith"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|center"
                android:layout_weight="2.5">
                <RatingBar
                    android:id="@+id/ratingbar_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:theme="@style/RatingBar"
                    android:rating="5"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_review_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:gravity="center|start"
            android:includeFontPadding="false"
            android:text="Nike Dri-FIT  Long Sleeve Nike Dri-FIT  Long Sleeve Nike Dri-FIT "
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"
            android:layout_marginTop="@dimen/padding3"
            android:padding="@dimen/padding5"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>