<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/padding10"
    android:id="@+id/lv_products"
    android:background="@drawable/white_round"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/lv_productwish_click"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center|top"
                android:orientation="vertical">

                <ImageView

                    android:id="@+id/iv_wishlist_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/dr"
                    android:scaleType="fitXY"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_wishlist_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginRight="@dimen/padding5"
                    android:includeFontPadding="false"
                    android:gravity="center|start|top"
                    android:text="Product Name"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tetx_16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|end"
                    android:layout_weight="3">

                    <LinearLayout
                        android:layout_marginRight="@dimen/padding5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/car"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lv_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_delete_forever_black_24dp"/>
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_wishlist_msrp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/priceee"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_wishlist_msrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="100 RS."
                    android:layout_marginLeft="@dimen/padding5"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/lv_special"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding10"
                android:padding="@dimen/padding10"
                android:background="@drawable/rounded_layout_blue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_wishlist_sp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/special"
                    android:ellipsize="end"
                    android:gravity="center|top"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_wishlist_special_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding5"
                    android:gravity="center|top"
                    android:text="90 RS."
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>