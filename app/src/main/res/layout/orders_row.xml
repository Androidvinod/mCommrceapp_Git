<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding5"
    android:id="@+id/lv_main_order"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:padding="@dimen/padding10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding5"
            android:layout_marginTop="@dimen/padding10"
            android:layout_marginRight="@dimen/padding5"
            android:layout_weight="1.2"
            android:gravity="center|start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_orders_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start|top"
                android:includeFontPadding="false"
                android:lines="1"
                android:maxLines="2"
                android:padding="@dimen/padding3"
                android:text="vinod"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_itemid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start|top"
                    android:includeFontPadding="false"
                    android:padding="@dimen/padding3"
                    android:text="@string/itemid"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_orders_itemid_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|top|start"
                    android:includeFontPadding="false"
                    android:padding="@dimen/padding3"
                    android:text="123456"
                    android:textColor="@color/grey_black"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_orders_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start|top"
                android:includeFontPadding="false"
                android:lines="1"
                android:maxLines="2"
                android:padding="@dimen/padding3"
                android:text="$ 250.00"
                android:textColor="@color/grey_black"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start|top"
                    android:includeFontPadding="false"
                    android:padding="@dimen/padding3"
                    android:text="@string/orderstatus"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/lv_order_status_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/padding5"
                    android:background="@drawable/rounded_greeeen"
                    android:padding="@dimen/padding5"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_orders_status_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="Pending"
                        android:paddingLeft="@dimen/padding10"
                        android:paddingRight="@dimen/padding10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_14"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:gravity="end|center">

            <LinearLayout
                android:id="@+id/lv_reorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_greeeen"
                android:padding="@dimen/padding5"
                android:gravity="center"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_reorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/reorder"
                    android:paddingLeft="@dimen/padding15"
                    android:paddingRight="@dimen/padding15"
                    android:paddingTop="@dimen/padding3"
                    android:paddingBottom="@dimen/padding3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/lv__track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center|end">

                <ImageView
                    android:id="@+id/ivorders_status"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/track_order"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/padding5"
        android:background="@color/greylight" />

</LinearLayout>