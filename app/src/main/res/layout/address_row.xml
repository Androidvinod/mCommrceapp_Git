<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding10"
    android:orientation="vertical">



    <RadioButton
        android:id="@+id/rad_delivery_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order will be delivered between 3-5 bussiness days"
        android:layoutDirection="rtl"
        android:textAlignment="textStart"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/text_14"
        android:textSize="@dimen/tetx_16"
        android:textColor="@color/grey_black"
        android:buttonTint="@color/greeen"
        android:backgroundTint="@color/greeen"
        android:drawableTint="@color/greeen"
        android:foregroundTint="@color/greeen" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/padding15"
        android:background="@color/border"/>

</LinearLayout>