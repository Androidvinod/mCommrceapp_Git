                android:layout_marginRight="@dimen/padding10"
                android:background="@drawable/rounded_border_grey"
                android:gravity="center"
                android:padding="@dimen/padding10"
                android:orientation="horizontal"
                android:weightSum="6">

                <LinearLayout
